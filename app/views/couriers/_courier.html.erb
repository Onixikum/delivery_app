<li class="list-group-item d-flex justify-content-between align-items-center">
  <%= link_to ("#{courier.name}"), courier_path(:"#{courier.id}"), class: "link-success" %>
  <span>
    <%= link_to "Edit", edit_courier_path(id: courier.id), class: "btn btn-warning btn-sm" %>
